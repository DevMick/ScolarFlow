{
  "version": 2,
  "buildCommand": "cd ../.. && pnpm install && cd apps/api && pnpm build",
  "outputDirectory": "dist",
  "devCommand": "cd ../.. && pnpm install && cd apps/api && pnpm dev",
  "installCommand": "cd ../.. && pnpm install",
  "framework": null,
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/server"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["cdg1"]
}

