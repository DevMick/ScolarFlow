{
  "version": 2,
  "buildCommand": "cd apps/api && pnpm install && pnpm run db:generate",
  "builds": [
    {
      "src": "apps/api/src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "apps/api/prisma/**",
          "apps/api/node_modules/@prisma/client/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "apps/api/src/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["cdg1"]
}
